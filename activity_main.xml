<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#76df97"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    tools:context="com.example.myapplication.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Registration Form"
        android:textColor="#03086c"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="Registration Form" />

    <EditText

        android:id="@+id/et1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:hint="First Name"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:hint="Last Name"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/etr"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:hint="Roll Number"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/et3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:hint="Mobile No"
        android:inputType="number"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/et4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <RadioGroup
        android:id="@+id/genderRadioGroup"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/m1"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:text="Male" />

        <RadioButton
            android:id="@+id/m2"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:text="Female"
            android:translationX="50sp" />

    </RadioGroup>

    <EditText
        android:id="@+id/et6"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:hint="Re-enter Password"
        android:inputType="textPassword"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:translationY="60sp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="123dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Submit"
        android:translationY="60sp" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="224dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#f74724"
        android:textSize="25sp"
        android:textStyle="bold"
        android:translationY="70sp" />

    <EditText
        android:id="@+id/et5"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:hint="Set Password"
        android:inputType="textPassword"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:translationY="-250sp" />

</LinearLayout>